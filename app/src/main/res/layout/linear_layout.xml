<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Logo di bagian atas dan tengah -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img_logo"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>

    <!-- Dua button horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Button 1"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/black"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Button 2" />
    </LinearLayout>

    <!-- Button panjang -->
    <Button
        android:id="@+id/longButton"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:text="Match Parent"/>

    <!-- Button di sebelah kanan dan kiri -->

        <Button
            android:id="@+id/rightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="Right"/>

        <Button
            android:id="@+id/leftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:text="Left"/>

    <!-- Gambar, teks, dan gambar secara horizontal -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_keyboard_arrow_left_24"
            android:contentDescription="Image 1"/>

        <Space
            android:layout_width="35dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="Choose your Drinks"
            android:textStyle="bold"/>

        <Space
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            android:contentDescription="Image 2"/>
    </LinearLayout>


</LinearLayout>
